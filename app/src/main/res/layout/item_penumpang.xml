<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="@color/whiteBodyColor">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="18dp">
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_pnp_wkt_transaksi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="31-10-20 19.30"
                        style="@style/viewParent.headerText"
                        android:fontFamily="@font/open_sans_regular"
                        android:textStyle="bold"
                        android:textSize="20sp"/>

                <TextView
                    android:id="@+id/tv_pnp_nominal"
                    style="@style/reportContentText"
                    android:textColor="@color/xd_pink"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nominal"
                    android:fontFamily="@font/open_sans_regular"
                    android:textSize="20sp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="5dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_pnp_pos_naik"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Banyuwangi"
                            android:fontFamily="@font/open_sans_regular"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="@color/xd_abu_gelap"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" - "
                            android:fontFamily="@font/open_sans_regular"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="@color/xd_abu_gelap"/>
                        <TextView
                            android:id="@+id/tv_pnp_pos_turun"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pamekasan"
                            android:fontFamily="@font/open_sans_regular"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="@color/xd_abu_gelap"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tv_pnp_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Banyuwangi"
                        android:fontFamily="@font/open_sans_regular"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@color/xd_abu_gelap"/>
                </LinearLayout>
            </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>