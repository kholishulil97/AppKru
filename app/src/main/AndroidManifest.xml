<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.appkru">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
        android:name=".printing.ApplicationClass"
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="E-Karcis Local"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar"
        tools:node="replace">
        <activity android:name=".activity.KontrolInputLaporanActivity"></activity>
        <activity android:name=".activity.KontrolInputActivity" />
        <activity android:name=".activity.PengeluaranActivity" />
        <activity android:name=".activity.SuratPerintahActivity" />
        <activity android:name=".activity.BuktiSetoranActivity" />
        <activity android:name=".activity.PenumpangActivity" />
        <activity android:name=".activity.TambahKarcisActivity" />
        <activity android:name=".activity.KarcisActivity" />
        <activity android:name=".activity.PremiActivity" />
        <activity android:name=".activity.LaporanHarianActivity" />
        <activity android:name=".activity.LaporanHarianSetorActivity" />
        <activity android:name=".activity.MainActivity" />
        <activity android:name="com.mazenrashed.printooth.ui.ScanningActivity" />
        <activity android:name=".activity.LaporanKontrolActivity" />
        <activity android:name=".activity.EmptyActivity" />
        <activity android:name=".activity.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>